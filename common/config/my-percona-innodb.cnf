[mysqld]
# Percona Server 8.4 with InnoDB
user = mysql
port = 3306
socket = /tmp/mysql_percona_innodb.sock
pid-file = /tmp/mysql_percona_innodb.pid
datadir = /mnt/nvme/mysql-percona-innodb/data

# Storage Engine
default-storage-engine = InnoDB

# Transaction Isolation (READ-COMMITTED for benchmark consistency)
transaction-isolation = READ-COMMITTED

# Binary log (ROW format for realistic production settings)
binlog_format = ROW

# Disable query logging for benchmarking
slow_query_log = 0
general_log = 0

# Disable Performance Schema (standard for benchmarks)
performance_schema = OFF

[client]
socket = /tmp/mysql_percona_innodb.sock

[mysqld]
# Vanilla MySQL 8.4.7 with InnoDB - BULK LOAD CONFIGURATION
# WARNING: These settings prioritize speed over durability
# Use only for data preparation, not for benchmarking or production
user = mysql
port = 3306
socket = /tmp/mysql_vanilla_innodb.sock
pid-file = /tmp/mysql_vanilla_innodb.pid
datadir = /mnt/nvme/mysql-vanilla-innodb/data

# Storage Engine
default-storage-engine = InnoDB

# Transaction Isolation
transaction-isolation = READ-COMMITTED

# Binary log (ROW format)
binlog_format = ROW

# Disable query logging
slow_query_log = 0
general_log = 0

# Disable Performance Schema
performance_schema = OFF

# ============================================
# BULK LOAD OPTIMIZATIONS
# ============================================

# InnoDB Buffer Pool - use most of available memory for caching
# System has ~63GB RAM, allocate ~48GB for buffer pool during bulk load
innodb_buffer_pool_size = 48G
innodb_buffer_pool_instances = 8

# Redo Log - larger log reduces checkpoint frequency
# innodb_redo_log_capacity replaces innodb_log_file_size in MySQL 8.0.30+
innodb_redo_log_capacity = 2G
innodb_log_buffer_size = 256M

# DANGEROUS: Disable durability for speed
# 0 = write and flush log once per second (not on commit)
innodb_flush_log_at_trx_commit = 0

# DANGEROUS: Disable doublewrite buffer
innodb_doublewrite = 0

# DANGEROUS: Disable binary log sync
sync_binlog = 0

# Increase I/O capacity for fast SSDs
innodb_io_capacity = 10000
innodb_io_capacity_max = 20000

# Parallel read threads
innodb_read_io_threads = 8
innodb_write_io_threads = 8

# Disable foreign key checks for faster loading
# (can also be done per-session with SET foreign_key_checks=0)
# foreign_key_checks = 0

# Increase sort buffer for index creation
sort_buffer_size = 64M
read_buffer_size = 16M

# Increase max connections for parallel loaders
max_connections = 200

# Enable LOAD DATA LOCAL INFILE for bulk loading
local_infile = 1

[client]
socket = /tmp/mysql_vanilla_innodb.sock
